<style>
  #filters-container {
    display: flex;
    justify-content: space-between; /* Push filters left, button right */
    align-items: center;
    flex-wrap: wrap;
    margin: 2rem 0;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: flex-start;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter:hover {
    opacity: 1;
    transform: scale(1.05);
  }

  /* üîπ Neutral color for filter icons */
  .filter i {
    font-size: 1.4rem;
    color: #555; /* soft dark gray */
    margin-bottom: 0.4rem;
  }

  /* üîπ Text below icon */
  .filter p {
    margin: 0;
    font-size: 0.9rem;
    color: #333;
  }

  /* ‚ù§Ô∏è Show Map button (red) */
  .map-view-btn {
    background-color: #fe424d;
    color: white !important;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    box-shadow: 0 4px 10px rgba(254, 66, 77, 0.4);
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .map-view-btn i {
    margin-right: 0.5rem;
  }

  .map-view-btn:hover {
    background-color: #d8343f;
    transform: scale(1.05);
    box-shadow: 0 6px 14px rgba(254, 66, 77, 0.5);
  }
</style>

<div id="filters-container">
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>Property Type</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-indian-rupee-sign"></i></div>
      <p>Budget</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-location-dot"></i></div>
      <p>Location</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-user-friends"></i></div>
      <p>Roommates</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-shield-halved"></i></div>
      <p>Verified</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Near Metro</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-utensils"></i></div>
      <p>Food Included</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-dog"></i></div>
      <p>Pet Friendly</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-car"></i></div>
      <p>Parking</p>
    </div>
  </div>

  <a href="/listings/map" class="map-view-btn">
    <i class="fa-regular fa-map me-2"></i> Show Map
  </a>
</div>



<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

  <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text"><b><%= listing.title %></b><br>
        &#8377; <%= listing.price.toLocaleString("en-IN")%> / month
    </p>
      </div>
    </div></a>
  <% } %>

</div>
